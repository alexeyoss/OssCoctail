<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.OssCoctails" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="helperTextTextColor">@color/grey</item>
        <!--TextViews-->
        <item name="emojiCompatEnabled">false</item>
        <!-- AppBar layout, Toolbar. -->
        <item name="appBarLayoutStyle">@style/Widget.OssCoctails.AppBarLayout.Light</item>
        <!-- System UI. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/white</item>
        <!--Shapes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.OssCoctails.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.OssCoctails.MediumComponent</item>
        <!-- Typography. -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.OssCoctails.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.OssCoctails.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.OssCoctails.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.OssCoctails.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.OssCoctails.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.OssCoctails.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.OssCoctails.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.OssCoctails.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.OssCoctails.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.OssCoctails.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.OssCoctails.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.OssCoctails.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.OssCoctails.Overline</item>
    </style>

    <style name="Theme.OssCoctails" parent="Base.Theme.OssCoctails" />
</resources>